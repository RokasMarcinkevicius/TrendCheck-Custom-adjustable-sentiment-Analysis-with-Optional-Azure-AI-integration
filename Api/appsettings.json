
{
  "Processing": {
    "MinSecondsBetweenAzureCalls": 30
  },
  "Azure": {
    "TextAnalytics": {
      "Endpoint": "https://yourazureservice.cognitiveservices.azure.com/",
      "Key": ""
    },
    "Translator": {
      "Key": "",
      "Region": ""
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "News": {
    "WatchlistTickers": ["AAPL", "MSFT", "NVDA", "TSLA"],
    "GoogleNews": {
      "Enabled": true,
      "PollIntervalSeconds": 120,
      "Language": "en-US",
      "Country": "US",
      "PerQueryItems": 20
    },
    "Reuters": {
      "Enabled": true,
      "PollIntervalSeconds": 300,
      "Feeds": [
        "https://www.reuters.com/markets/us/rss",
        "https://www.reuters.com/markets/europe/rss"
      ]
    },
    "Sec": {
      "Enabled": true,
      "PollIntervalSeconds": 600,
      "AtomUrl": "https://www.sec.gov/cgi-bin/browse-edgar?action=getcurrent&output=atom"
    },
    "Fmp": {
      "Enabled": false,
      "PollIntervalSeconds": 300,
      "ApiKey": "<YOUR_FMP_KEY>",
      "Limit": 50
    }
  }
}
